version: '3'
services:
  db:
    image: {{ mariadb_image }}
    networks:
      - {{ frontend_docker_network }}
      - {{ backend_docker_network }}
    volumes:
      - {{ mariadb_src_dir }}:/var/lib/mysql

  phpmyadmin:
    image: {{ phpmyadmin_image_name }}
    networks:
      - {{ backend_docker_network }}
    ports:
      - {{ phpmyadmin_port }}:80
    environment:
      PMA_HOST: db
      MYSQL_ROOT_PASSWORD: {{ db_root_password }}
      MYSQL_USER: {{ db_user }}
      MYSQL_PASSWORD: {{ db_password }}
      MYSQL_DATABASE: {{ db_name }}


networks:
  {{ frontend_docker_network }}:
    external: true
  {{ backend_docker_network }}:
    external: true