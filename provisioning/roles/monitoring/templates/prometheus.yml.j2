global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    monitor: '{{ prometheus_monitor_name }}'

rule_files:
  - "targets.rules"
  - "host.rules"
  - "containers.rules"

scrape_configs:

  - job_name: 'prometheus'
    scrape_interval: 10s
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'node'
    scrape_interval: 10s
    static_configs:
      - targets: ['192.168.0.21:9100']